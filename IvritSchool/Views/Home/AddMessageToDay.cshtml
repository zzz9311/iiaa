@model int
@{
    ViewBag.Title = "AddDay";
}

<h2>Добавление дня</h2>
<br />

@using (Html.AjaxBeginForm("AddMessageToDay", new AjaxOptions { UpdateTargetId = "Result", HttpMethod = "POST" }))
{
    <input type="hidden" name="dayID" value="@Model" />
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
                <label for="formGroupExampleInput">Тип сообщения</label>
                <select name="Type" class="form-control" asp-items="@ViewBag.MessageTypes"></select>
            </div>
        </div>
    </div>

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
                <label for="formGroupExampleInput">Текст сообщения</label>
                <input type="text" class="form-control" value="" name="Text" placeholder="">
            </div>
        </div>
    </div>

    <input type="submit" class="form-control" value="Добавить" />
}
<div>
    <h3 id="Result"></h3>
</div>