@model Message
@{
    ViewBag.Title = "AddDay";
}

<h2>Добавление дня</h2>
<br />

@using (Html.AjaxBeginForm("AddMessageToDay", new AjaxOptions { UpdateTargetId = "Result", HttpMethod = "POST" }, new { enctype = "multipart/form-data" }))
{
    <input type="hidden" name="dayID" value="@ViewBag.Day" />
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
                <label for="formGroupExampleInput">Тип сообщения</label>
                <select name="Type" class="form-control" asp-for="Type" asp-items="@ViewBag.MessageTypes"></select>
            </div>
        </div>
    </div>

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
                <label for="formGroupExampleInput">Текст сообщения</label>
                <input type="text" asp-for="Text" class="form-control" value="" name="Text" placeholder="">
            </div>
        </div>
    </div>

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
                <label for="formGroupExampleInput">Выберите файл для загрузки</label>
                <input type="file" name="uploadedFile" /><br><br />
            </div>
        </div>
    </div>

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
                <label for="formGroupExampleInput">VIP</label>
                <input type="checkbox" asp-for="VIP" class="form-control">
            </div>
        </div>
    </div>

    <input type="submit" class="form-control" value="Добавить" />
}
<div>
    <h3 id="Result"></h3>
</div>