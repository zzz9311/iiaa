@model IvritSchool.Entities.Message

@{
    ViewBag.Title = "EditUser";
}

<h2>Рассылка</h2>

@using (Html.AjaxBeginForm("SendMessage", new AjaxOptions { UpdateTargetId = "Result", HttpMethod = "POST" }, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="mb-3">
                <label for="formGroupExampleInput">Тип сообщения</label>
                <select name="Type" class="form-control" asp-for="Type" asp-items="@ViewBag.MessageTypes"></select>
            </div>
        </div>
    </div>

    <div class="form-horizontal">
        <div class="form-group">
            <div class="mb-3">
                <input type="hidden" asp-for="@Model.ID" />
                <label for="formGroupExampleInput">Текст сообщения</label>
                <textarea class="form-control" rows="7" cols="100" asp-for="@Model.Text" placeholder=""></textarea>
            </div>
        </div>
    </div>
    <div class="form-horizontal">
        <div class="form-group">
            <div class="mb-3">
                <label for="formGroupExampleInput">Выберите файл для загрузки</label><br />
                <input type="file" name="uploadedFile" /><br>
            </div>
        </div>
    </div>
    <div class="form-horizontal">
        <div class="form-group">
            <div class="mb-3">
                <label for="formGroupExampleInput">Введите ID пересылаемого сообщения</label><br />
                <input type="text" class="form-control" name="ForwardedMessage" /><br>
            </div>
        </div>
    </div>
    <div class="form-horizontal">
        <div class="form-group">
            <div class="mb-3">
                <label for="formGroupExampleInput">Введите ID группы пересылаемого сообщения</label><br />
                <input type="text" class="form-control" name="ForwardedGroup" /><br>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="mb-3">
            <input type="submit" class="btn btn-primary" value="Добавить" />
        </div>
    </div>
}
<div>
    <h3 id="Result"></h3>
</div>


